<%= render "shared/navbar" %>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1485872299829-c673f5194813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60);">
  <div class="container">
    <h1>Cocktails brings <strong>skills</strong> to <strong>people</strong>!</h1> <br> <p>Discover a cocktail and impresion your firends with your skils !</p>
  </div>
</div>


<div class="text-center m-5">
  <h1>All our cocktails !</h1>
</div>


<div class="d-flex justify-content-around m-5">

  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1586&q=80)">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  <% end %>

</div>


<div class="text-center m-5">
  <button type="button" class="btn btn-dark"><%= link_to "Add a new cocktail !", new_cocktail_path %></button>
</div>


